extends layout

block content
  h1.page-header Log In:
  .row
    form.col-sm-4.col-sm-offset-4(action="/" method="POST" class="form-horizontal")
      .form-group
        label(for="username") Username
        input.form-control(type="text" name="username" id="username" placeholder="Username")
      .form-group
        label(for="password") Password
        input.form-control(type="password" name="password" id="password" placeholder="Password")
      .form-group
        input.btn.btn-primary(type="submit" value="Login")
        a.btn.btn-link(href='/forgot') Forgot Password?


